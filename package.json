{
	"private": true,
	"name": "@scope/pacakge-name",
	"version": "0.1.0",
	"description": "A template for TypeScript packages, compatible with ES6 and CommonJS",
	"keywords": [
		"plato",
		"template",
		"typescript",
		"es6",
		"commonjs"
	],
	"license": "MIT",
	"author": "Package Author <author@email.com>",
	"main": "dist/cjs/index.js",
	"types": "dist/types/index.d.ts",
	"module": "dist/es/index.js",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc && tsc -p tsconfig-cjs.json",
		"clean": "rm -rf dist",
		"doc": "rm -rf docs && typedoc lib/index.ts",
		"lint": "eslint --ext .ts --max-warnings 0 lib tests",
		"prepublish": "yarn lint && yarn clean && yarn build && yarn test",
		"test": "ts-node --project tsconfig-cjs.json -T node_modules/tape/bin/tape 'tests/**/*-test.ts'"
	},
	"devDependencies": {
		"@plato/eslint-config-ts": "^0.3.3",
		"@types/tape": "^4.13.0",
		"@typescript-eslint/eslint-plugin": "^4.17.0",
		"@typescript-eslint/parser": "^4.17.0",
		"eslint": "^7.22.0",
		"tape": "^5.2.2",
		"ts-node": "^9.1.1",
		"typedoc": "^0.20.32",
		"typescript": "^4.2.3"
	},
	"publishConfig": {
		"access": "public"
	},
	"eslintConfig": {
		"extends": "@plato/eslint-config-ts"
	}
}
